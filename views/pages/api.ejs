<script>
    let clicks = 0;
    function easteregg() {
        clicks++;
        document.getElementById("easteregg").style = "display: block;";
        document.getElementsByClassName("clicknumberer")[0].textContent = clicks + ' clicks';
        if (clicks == 250) document.getElementById("eastereggA").style = "display: block;";
        if (clicks == 500) document.getElementById("eastereggB").style = "display: block;";
        if (clicks == 1000) document.getElementById("eastereggC").style = "display: block;";
        if (clicks == 9999) document.getElementById("eastereggZ").style = "display: block;";
    }
    function testApi(urlpartial) {
        var id = document.getElementById("idfield").value;
        window.location = `/api/${urlpartial}/${id}`;
    }
</script>

